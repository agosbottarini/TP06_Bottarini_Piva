<div class="row">
    @foreach (Candidato item in ViewBag.Candidatos)
    {
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <a><img src="/img/partidos/@item.Foto" alt="..." class="rounded mx-auto d-block"></a>
                    <br><br>
                    <p class="rounded mx-auto d-block"> @item.Nombre </p>
                    <br>
                    <a href='@Url.Action("VerDetallePartido", "Home", new {idPartido = item.IdPartido})' class="btn btn-primary rounded mx-auto d-block">Ver m√°s</a>
                </div>
            </div>
        </div>
    
    }
</div>